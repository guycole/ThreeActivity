<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- middle activity theme -->
    <style name="RedTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_red</item>
    </style>

    <!-- generic text view parent -->
    <style name="TextView01">
        <item name="android:textColor">#ffd700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <!-- text view for phones -->
    <style name="TextView01.Default">
        <item name="android:textSize">30sp</item>
    </style>

    <!-- text view for tablets  -->
    <style name="TextView01.Large">
        <item name="android:textSize">45sp</item>
    </style>
</resources>